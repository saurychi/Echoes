@model Echoes.Models.LoginViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">Log In</h1>
                    <form method="post">
                        <div class="mb-3">
                            <label for="Email" class="form-label">Username</label>
                            <input type="text" id="UserName" name="UserName" asp-for="UserName" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="Password" class="form-label">Password</label>
                            <input type="password" id="Password" name="Password" class="form-control" asp-for="Password" required>
                        </div>
                        <div class="d-grid mb-3">
                            <button asp-action="Login" asp-controller="Users" type="submit" class="btn btn-primary">Log In</button>
                        </div>
                    </form>
                    <p class="text-center mt-3">
                        Don't have an account? <a asp-action="Signup" asp-controller="Users">Sign up here</a>.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
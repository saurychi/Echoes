@{
}

@model List<Echoes.Models.Entities.User>

<h2 class="mb-3">Accounts</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Username</th>
            <th scope="col">Password</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.UserName</td>
                <td>@user.Password</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-controller="Users" asp-route-id="@user.UserId">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
